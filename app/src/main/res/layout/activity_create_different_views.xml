<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.CreateDifferentViewsActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreateToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/create_toast"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreateSnackBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/create_snackbar"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreateAlertDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/create_alert_dialog"
        />
</LinearLayout>